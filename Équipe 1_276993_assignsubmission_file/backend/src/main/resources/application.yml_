spring:
  data:
    mongodb:
      uri: ${DB_URI}
      #database: taf_database
      auto-index-creation: true

  jpa:
    defer-datasource-initialization: true
    hibernate:
      ddl-auto: update
      dialect : ${spring.jpa.properties.hibernate.dialect}
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect
  messages:
    basename: validation
    encoding: ISO-8859-1
  sql:
    init:
      mode: always
      platform: mysql
taf:
  app:
    jwtSecret: ${API_TEST_TOKEN}
    jwtExpirationMs: ${API_TEST_EXP_TIME}
    testAPI_url: ${API_TEST_URL}
    testAPI_port: ${API_TEST_PORT}
    #selenium_container_url: http://10.0.0.29 # URL correcte pour Selenium
    #selenium_container_port: 4444  # Port utilis√© par Selenium Grid
    selenium_container_url: ${SELENIUM_URL}
    selenium_container_port: ${SELENIUM_PORT}

logging:
  level:
    #root: DEBUG
    #org.springframework: DEBUG
    #org.springframework.web: DEBUG
    org.springframework.data.mongodb: DEBUG
    org.springframework.web.client.RestTemplate: DEBUG
    org.springframework.web.reactive.function.client.WebClient: DEBUG

server.error.whitelabel.enabled: false

server:
  port: 8083
